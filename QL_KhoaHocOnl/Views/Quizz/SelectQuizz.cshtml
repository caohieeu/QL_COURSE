@model QL_KhoaHocOnl.ViewModel.QuizVM

@{
    ViewBag.Title = "SelectQuizz";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="h-100 w-100" style="background-image: url('https://htmlcolorcodes.com/assets/images/html-color-codes-color-tutorials-hero.jpg');">
    <div class="container d-flex justify-content-center">
        <div class="w-50 mt-5">
            <div class="card card-body mt-5">
                <div class="panel-heading mb-2">Chọn nội dung câu hỏi:</div>
                <div class="panel-body">
                    @using (Html.BeginForm("SelectQuizz", "Quizz", FormMethod.Post))
                    {
                        @Html.DropDownListFor(model => model.QuizID, Model.ListOfQuizz, new { @class = "form-control" })<br />
                        <button type="submit" id="Enter" class="btn btn-success btn-lg" style="width:100%;"><span class="glyphicon glyphicon-ok"></span>Bắt đầu thôi </button>
                    }
                    <div>
                        <h5 class="my-3">Lịch sử làm bài: </h5>
                        @{
                            QL_KhoaHocOnl.Models.QL_COURSEEntities1 db = new QL_KhoaHocOnl.Models.QL_COURSEEntities1();
                            var QuizResult = db.QuizResults.ToList();
                        }
                        @if (QuizResult.Count() == 0)
                        {
                            <p class="mx-3">
                                <a class="">Chưa có bài làm nào</a>
                            </p>
                        }
                        @foreach (var item in QuizResult)
                        {
                            <ul class="mx-3">
                                <li class="">Lần 1: @item.Grade Điểm</li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>