@model QL_KhoaHocOnl.ViewModel.MailVM 

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="all-title-box">
    <div class="container text-center">
        <h1>Liên hệ<span class="m_1">Bạn có điều gì thắc mắt cần giải đáp?</span></h1>
    </div>
</div>

<div id="contact" class="section wb">
    <div class="container">
        <div class="section-title text-center">
            <h3>Bạn cần giúp đỡ? Chúng tôi chắc chắn online</h3>
            <p class="lead">Hãy gửi cho chúng tôi những gì bạn muốn thay đổi về trang web của chúng tôi. Hãy điền vào form
        </div><!-- end title -->

        <div class="row">
            <div class="col-6 col-12 col-sm-12">
                <div class="contact_form" style="background-color: #caedef ">
                    <div id="message"></div>
                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { enctype = "multipart/form-data", style = "background-color: #caedef" }))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="row row-fluid">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                @Html.TextBoxFor(model => model.first_name, new {@class="form-control", placeholder="Họ"})
                            </div>  
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                @Html.TextBoxFor(model => model.last_name, new { @class = "form-control", placeholder = "Tên" })
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email", type="email" })
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <input type="text" name="phone" id="phone" class="form-control" placeholder="Số điện thoại">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                @Html.TextAreaFor(model => model.comments, new {@class="form-control", placeholder = "Gửi chúng tôi ý kiến...", rows="6" })
                            </div>
                            <div class="text-center pd">
                                <button type="submit" value="SEND" id="submit" class="btn btn-primary w-100">Gửi</button>
                            </div>
                        </div>
                    }

                </div>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->